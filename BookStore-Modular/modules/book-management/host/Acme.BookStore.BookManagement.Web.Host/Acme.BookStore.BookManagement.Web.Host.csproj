    <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" Version="9.0.5" />
    <PackageReference Include="Microsoft.AspNetCore.DataProtection.StackExchangeRedis" Version="9.0.5" />
    <PackageReference Include="Volo.Abp.Autofac" Version="9.3.3" />
    <PackageReference Include="Volo.Abp.AspNetCore.Mvc.Client" Version="9.3.3" />
    <PackageReference Include="Volo.Abp.AspNetCore.Authentication.OAuth" Version="9.3.3" />
    <PackageReference Include="Volo.Abp.Http.Client.IdentityModel.Web" Version="9.3.3" />
